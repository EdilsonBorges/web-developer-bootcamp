<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>YelpCamp!</h1>
            <p>View our hand-picked campgrounds</p>
            <p>
                <a class='btn btn-primary btn-large' href="/campgrounds/new">Create new camp</a>
            </p>
        </div>
    </header>
    <div class="col-lg-12 text-center">
        <h3>Our most popular campgrounds</h3>
    </div>
    <div class='row text-center' style="display:inline-flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img id="index-thumbnail" src="<%= campground.image %>">
                    <div class="caption">                        
                        <h4><%= campground.name %></h4>
                    </div>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>