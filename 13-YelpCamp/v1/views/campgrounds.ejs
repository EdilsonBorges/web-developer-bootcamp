<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>YelpCamp!</h1>
            <p>View our hand-picked campgrounds</p>
            <p>
                <a class='btn btn-primary btn-large' href="/campgrounds/new">Create new camp</a>
            </p>
        </div>
    </header>
    <div class='row'>
        <div class="col-lg-12">
            <h3>Our most popular</h3>
        </div>
    </div>
    <% campgrounds.forEach(function(campground){ %>
        <div>
            <h4><%= campground.name %></h4>
            <img src="<%= campground.image %>" alt="">
        </div>
    <% }) %>
</div>

<% include partials/footer %>